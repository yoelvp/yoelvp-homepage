---
import Content from './Content.astro'
---

<Content>
  <footer class="footer">
    <p class="footer__name white-to-primary">
      &copy; {new Date().getFullYear()} Yoel Valverde.
    </p>

    <ul class="footer__networks">
      <li>
        <a
          href="https://linkedin.com/in/yoelvalverdepolo/"
          target="_blank"
          class="white-to-primary"
        >
          LinkedIn
        </a>
      </li>
      <li>
        <a
          href="https://github.com/yoelvp/"
          target="_blank"
          class="white-to-primary"
        >
          Github
        </a>
      </li>
    </ul>
  </footer>
</Content>

<style>
.footer {
  height: 4rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 4rem;
}

.footer .footer__networks {
  display: flex;
  justify-content: center;
  align-items: center;
  column-gap: 1rem;
}

.footer__networks a {
  transition: color 300ms, text-decoration 300ms;
}

.footer__networks a:hover {
  color: var(--primary);
  text-decoration: underline;
}
</style>
