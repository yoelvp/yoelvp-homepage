---
const { ...props } = Astro.props
---

<span {...props}>
  <slot />
</span>

<style>
span {
  display: inline-block;
  border-style: solid;
  border-width: 1px;
  font-weight: 400;
  display: inline-block;
  padding: 2px 0.5rem;
  font-size: var(--text-sm);
  text-wrap: nowrap;
  border-radius: var(--rounded-lg);
  transition: background-color 300ms, color 300ms;
}
</style>
