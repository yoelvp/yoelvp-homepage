---
import { IoIosArrowForward } from "react-icons/io";

interface Props {
  label?: string
  href?: string
}

const { label = 'Proyectos', href } = Astro.props
---

<div class='flex justify-center items-center gap-2'>
  <a href={href} class='text-sm underline white-to-primary transition-colors duration-300 hover:text-primary'>
    {label}
  </a>
  <IoIosArrowForward />
  <h2 class='font-bold text-primary'>
    <slot />
  </h2>
</div>
