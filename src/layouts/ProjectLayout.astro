---
import type { Project } from '@/types/Project'

import { Image } from 'astro:assets'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import BaseHead from '@/components/BaseHead.astro'
import Content from '@/components/Content.astro'
import Badge from '@/components/Badge.astro'

interface Props {
  content: Project
}

const {
  content: {
    title,
    description,
    thumb,
    stack,
    resources
  }
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${title} / Yoel Valverde - Frontend Developer`} description={description} />
  </head>
  <body>
    <main class="main">
      <Header />

      <Content>
        <Image
          src={thumb ?? ''}
          height={200}
          width={280}
          alt='thumbnail'
          class='thumbnail'
        />

        <section class="content">
          <strong class="content__title">
            {title}
          </strong>
          <p class="content__description">
            {description}
          </p>
        </section>

        <div class="links">
          {resources?.website && (
            <div class="link__item">
              <Badge class="badge--primary">
                Sitio web
              </Badge>
              <a
                href={resources?.website}
                target="_blank"
                rel="noopener noreferrer"
              >
                {resources?.website}
              </a>
            </div>
          )}
          {resources?.github && (
            <div class="link__item">
              <Badge class="badge--primary">
                Github
              </Badge>
              <a
                href={resources?.github}
                target="_blank"
                rel="noopener noreferrer"
              >
                {resources?.github}
              </a>
            </div>
          )}
          <div class='link__item'>
            <Badge class="badge--primary">
              Stack
            </Badge>
            <p class="text-zinc-300 white-to-primary">
              {stack?.join(', ')}.
            </p>
          </div>
        </div>

        <hr class="separator__line" />

        <section class="wrapper markdown-body">
          <slot />
        </section>
      </Content>
    </main>

    <Footer />
    <div id="cursor"></div>
  </body>
</html>

<style>
.main {
  margin-top: 2rem;
  width: 100%;
}

.thumbnail {
  width: 100%;
  height: auto;
  margin-bottom: 1rem;
  border-radius: var(--rounded);
  object-fit: cover;
  object-position: center;
}

.content {
  display: flex;
  flex-direction: column;
  row-gap: 0.25rem;
  margin-bottom: 1.5rem;
}

.content .content__title {
  font-size: 20px;
  font-weight: 500;
}

.content .content__description {
  color: var(--zinc-400);
}

.links {
  display: flex;
  flex-direction: column;
  row-gap: 0.5rem;
}

.link__item {
  display: flex;
  justify-content: start;
  align-items: center;
  column-gap: 0.5rem;
}

.link__item a {
  display: inline-block;
  color: var(--primary);
  text-decoration: underline;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.separator__line {
  border: none;
  width: 100%;
  height: 1px;
  background-color: var(--zinc-700);
  margin: 2rem 0;
}

.wrapper {
  width: 100%;
}
</style>
