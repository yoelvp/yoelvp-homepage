---
import BaseHead from '../components/BaseHead.astro'
import Header from '@/components/Header.astro'

interface Props {
  title: string
  description: string
  isHeaderFixed?: boolean
}

const { title, description, isHeaderFixed } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead {title} {description} />
</head>
<body>
  <main>
    <Header isFixed={isHeaderFixed} />
    <slot />
  </main>

  <!-- <div id="cursor"></div> -->
</body>
</html>
